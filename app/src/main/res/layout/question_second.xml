<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_drawable">

    <TextView
        android:id="@+id/second_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:layout_gravity="center"
        android:text="이런 태그는 어떻습니까?"
        android:fontFamily="@font/sixtwofivesevenzero"
        android:textColor="@color/black"
        android:layout_marginTop="80dp"/>

    <RadioGroup
        android:id="@+id/RadioGroup_Tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        >
        <RadioButton
            android:id="@+id/Tag_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/nexonlv1gothicbold"
            android:text="태그1" />

        <RadioButton
            android:id="@+id/Tag_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/nexonlv1gothicbold"
            android:text="태그2" />

        <RadioButton
            android:id="@+id/Tag_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/nexonlv1gothicbold"
            android:text="태그3" />

        <RadioButton
            android:id="@+id/Tag_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/nexonlv1gothicbold"
            android:text="태그4" />

        <RadioButton
            android:id="@+id/Tag_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/nexonlv1gothicbold"
            android:text="태그5" />
    </RadioGroup>

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="submit_button_Clicked"
        android:layout_marginTop="50dp"
        android:text="제출하기" />

</LinearLayout>