<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#F7DFCF"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/poem_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/humanarmy"
                android:textSize="30dp"
                android:text="시 제목" />

            <TextView
                android:id="@+id/poem_writer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_gravity="right"
                android:fontFamily="@font/nexonlv1gothicregular"
                android:textSize="15dp"
                android:text="시 작가" />

            <TextView
                android:id="@+id/poem_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/nexonlv1gothicregular"
                android:textSize="18dp"
                android:text="시 내용" />

            <LinearLayout
                android:id="@+id/like_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <FrameLayout
                    android:id="@+id/like_button_frame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center">

                    <Button
                        android:id="@+id/like_button"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:background="@drawable/heart_drawable"
                        android:focusableInTouchMode="true"
                        android:padding="0dp"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/not_like_button"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:background="@drawable/heart_filled_drawable"
                        android:focusableInTouchMode="true"
                        android:padding="0dp"
                        android:visibility="invisible" />
                </FrameLayout>
                <TextView
                    android:id="@+id/like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="좋아요 수" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/comment_edit"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:hint="여기에 댓글을 씁니다." />

                <ImageButton
                    android:id="@+id/comment_send"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@android:drawable/ic_menu_send" />
            </LinearLayout>
            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="여기에 댓글 리스트가 보입니다." />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>